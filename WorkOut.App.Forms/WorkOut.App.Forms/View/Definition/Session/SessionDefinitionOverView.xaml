<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkOut.App.Forms.View.SessionDefinitionOverView">
  <StackLayout>
    <Button Text="Edit WorkOut Definitions" Clicked="OnEditWorkOutDefinitions" />
    <Button Text="Add Session" Clicked="OnAddSessionClicked" />
    <ListView x:Name="SessionList" ItemsSource="{Binding Sessions}" ItemTapped="OnItemTapped">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ViewCell.ContextActions>
              <MenuItem Clicked="OnMoveSessionUpClicked"
                 Text="Move Up" />
              <MenuItem Clicked="OnMoveSessionDownClicked"
                 Text="Move Down" />
              <MenuItem Clicked="OnDeleteSessionClicked" CommandParameter="{Binding }"
                 Text="Delete" IsDestructive="True" />
            </ViewCell.ContextActions>
            <StackLayout Padding="15,0">
              <Label Text="{Binding SessionName}" />
            </StackLayout>
          </ViewCell> 
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>